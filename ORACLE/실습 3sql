// 실습 3-4
CREATE TABLE USER4 (
    NAME VARCHAR2(20) NOT NULL,
    GENDER CHAR(1) NOT NULL,
    AGE INT DEFAULT 1,
    ADDR VARCHAR2(225)
);

INSERT INTO USER4 VALUES ('김유신','M',23,'김해시');
