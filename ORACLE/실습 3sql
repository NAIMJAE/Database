// 실습 3-1
CREATE TABLE USER2 (
    ID VARCHAR(20) PRIMARY KEY,
    NAME VARCHAR(20),
    HP CHAR(13),
    AGE NUMBER(2)
);

// 실습 3-2
CREATE TABLE USER3 (
    ID VARCHAR2(20) PRIMARY KEY,
    NAME VARCHAR(20),
    HP CHAR(13) UNIQUE,
    AGE NUMBER(2)
);

// 실습 3-3
CREATE TABLE PARENT (
    PID VARCHAR2(20) PRIMARY KEY,
    NAME VARCHAr2(20),
    HP CHAR(13) UNIQUE
);

CREATE TABLE CHILD (
    CID VARCHAR(20) PRIMARY KEY,
    NAME VARCHAR(20),
    HP CHAR(13) UNIQUE,
    PARENT VARCHAR(20),
    FOREIGN KEY (PARENT) REFERENCES PARENT (PID)
);

